@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
    @foreach (var item in Model)
    {
        var imagePath = "~/img/" + (item.ImagePath ?? "noimage.svg");

        <div class="card m-3 card-min-cards bkg-gray">
            <div class="card-header">
                <h1 style="color: #32e0c4;">@item.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top img-profile" src="@imagePath" asp-append-version="true" />
                <hr />
                <h4>Id: <span class="clr-green">@item.Id</span></h4>
                <h4>Email: <span class="clr-green">@item.Email</span></h4>
                <h4>Department: <span class="clr-green">@item.Department</span></h4>
            </div>
            <div class="card-footer text-center">
                <a class="btn m-1 btn-outline-success" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">View</a>
                <a class="btn m-1 btn-outline-success" asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn m-1 btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
