@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-11">
        <table class="table table-borderless" style="background: #32e0c4; color: #222831;">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Department</th>
                </tr>
            </thead>
            <tbody style="background: #393e46; color: #eeeeee;">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Department</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

