@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.RoleId;
}

<form method="post">
    <div class="card thm-gray mt-3">
        <h5 class="card-header clr-green">
            Add or remove users from this role
        </h5>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model[i].UserId" type="hidden" />
                    <input asp-for="@Model[i].UserName" type="hidden" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">
                Update
            </button>
            <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@roleId" class="btn btn-outline-success">
                Cancel
            </a>
        </div>
    </div>
</form>
