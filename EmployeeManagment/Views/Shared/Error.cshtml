@{
    ViewBag.Title = "Error";
}

@if (ViewBag.ErrorMessage == null)
{
    <h3 class="mt-3 mb-4">Unhandled error occured</h3>
}
else
{
    <h3 class="mt-3 mb-2">Unhandled error occured</h3>
    <h5 class="mt-3 mb-4">@ViewBag.ErrorMessage</h5>
}

<a asp-controller="home" asp-action="index" class="btn btn-outline-success" style="width: auto;">
    Click here to navigate to the home page
</a>
